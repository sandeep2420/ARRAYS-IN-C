//stock problem:
//The user will provide daily cost of a stock price as an element of array, we have to provide the buying price and selling price 
where the user can get maximum profit by
{35,6,100,97,3}//

#include<stdio.h>
int main()
{
  int size;
  printf("Enter the size of array:");
  scanf("%d", &size);
  int a[size];
  for(int i=0; i<size; i++)
  {
    printf("Enter the %d value:", i+1);
    scanf("%d", &a[i]);
  }

  int buy=0;
  int sell=0;
  int profit=0;

  for(int i=0; i<size-1; i++)
  {
    for(int j=i+1; j<=size-1; j++)
    {
      int pur=a[j]-a[i];
      if(pur>profit)
      {
        buy = a[i];
        sell = a[j];
        profit = pur;
      }
    }
  }
  printf("buy=%d \t sell=%d \t profit=%d",
  buy, sell, profit);

  return 0;
}
