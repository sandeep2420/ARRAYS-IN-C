WRITE A PROGRAM ON ARRAYS TO THEIR SIXE


#include<stdio.h>
int main()
{
	int size;
	printf("Enter the size of the array \n");
	scanf("%d",&size);
	int a[size];
	int i;
	int j;
	for(i=0;i<=(size-1);i++)
	{
		printf("Enter the %d value:\n",(i+1));
		scanf("%d",&a[i]);
	}
	for(i=0; i<=(size-1);i++)
	{
			if (a[i]-1==a[i+1])
			{
			printf("%d,%d",a[i],a[i+1]);
			i++;
			}
			else if(a[1]-1==a[i-1])
			{
				printf("%d\n",a[i]);
			}
	}
	return 0;
}
